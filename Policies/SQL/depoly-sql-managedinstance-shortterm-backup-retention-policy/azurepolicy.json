{
    "properties": {
      "displayName": "jls-sqlmi-v2",
      "policyType": "Custom",
      "mode": "All",
      "metadata": {
        "createdBy": "77acb525-98e2-4bc6-8a06-5db905455559",
        "createdOn": "2021-05-06T19:21:27.8809259Z",
        "updatedBy": null,
        "updatedOn": null,
        "category": "jason"
      },
      "parameters": {},
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Sql/managedInstances/databases"
            }
          ]
        },
        "then": {
          "effect": "deployIfNotExists",
          "details": {
            "type": "Microsoft.Sql/managedInstances/databases/backupShortTermRetentionPolicies",
            "name": "default",
            "existenceCondition": {
              "field": "Microsoft.Sql/managedInstances/databases/backupShortTermRetentionPolicies/retentionDays",
              "equals": 35
            },
            "deployment": {
              "properties": {
                "mode": "incremental",
                "template": {
                  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                  "contentVersion": "1.0.0.0",
                  "parameters": {
                    "fullDbName": {
                      "type": "string"
                    }
                  },
                  "resources": [
                    {
                      "type": "Microsoft.Sql/managedInstances/databases/backupShortTermRetentionPolicies",
                      "apiVersion": "2020-11-01-preview",
                      "name": "[concat(parameters('fullDbName'), '/default')]",
                      "properties": {
                        "retentionDays": 35
                      }
                    }
                  ]
                },
                "parameters": {
                  "fullDbName": {
                    "value": "[field('fullName')]"
                  }
                }
              }
            },
            "roleDefinitionIds": [
              "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
            ]
          }
        }
      }
    },
    "id": "/subscriptions/0dd72e9e-c3c8-4e00-a5f1-a197bc0f2a3d/providers/Microsoft.Authorization/policyDefinitions/4cd9a7f0-4f17-4908-96d4-74cd9846d104",
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "4cd9a7f0-4f17-4908-96d4-74cd9846d104"
  }