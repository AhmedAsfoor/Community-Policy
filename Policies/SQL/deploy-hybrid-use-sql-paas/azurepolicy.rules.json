{
    "if": {
        "allOf": [
            {
                "field": "type",
                "equals": "Microsoft.Sql/servers/databases"
            },
            {
                "anyOf": [
                    {
                        "field": "Microsoft.Sql/servers/databases/currentSku.tier",
                        "equals": "GeneralPurpose"
                    },
                    {
                        "field": "Microsoft.Sql/servers/databases/currentSku.tier",
                        "equals": "Hyperscale"
                    },
                    {
                        "field": "Microsoft.Sql/servers/databases/currentSku.tier",
                        "equals": "BusinessCritical"
                    }
                ]
            }
        ]
    },
    "then": {
        "effect": "DeployIfNotExists",
        "details": {
            "type": "Microsoft.Sql/servers/databases",
            "roleDefinitionIds": [
                "/providers/Microsoft.Authorization/roleDefinitions/8e3af657-a8ff-443c-a75c-2fe8c4bcb635"
            ],
            "existenceCondition": {
                "allOf": [
                    {
                        "field": "Microsoft.Sql/servers/databases/licenseType",
                        "equals": "BasePrice"
                    }
                ]
            },
            "deployment": {
                "properties": {
                    "mode": "incremental",
                    "template": {
                        "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                        "contentVersion": "1.0.0.0",
                        "parameters": {
                            "sqlServerDatabaseName": {
                                "type": "string"
                            },
                            "location": {
                                "type": "string"
                            },
                            "sqlServerDatabaseSkuName": {
                                "type": "string"
                            }
                        },
                        "resources": [
                            {
                                "name": "[parameters('sqlServerDatabaseName')]",
                                "type": "Microsoft.Sql/servers/databases",
                                "apiVersion": "2017-10-01-preview",
                                "location": "[parameters('location')]",
                                "sku": {
                                    "name": "[parameters('sqlServerDatabaseSkuName')]"
                                },
                                "properties": {
                                    "licenseType": "BasePrice"
                                }
                            }
                        ]
                    },
                    "parameters": {
                        "sqlServerDatabaseName": {
                            "value": "[field('name')]"
                        },
                        "location": {
                            "value": "[field('location')]"
                        },
                        "sqlServerDatabaseSkuName": {
                            "value": "[field('Microsoft.Sql/servers/databases/currentSku.name')]"
                        }
                    }
                }
            }
        }
    }
}