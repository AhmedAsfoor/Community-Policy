{
    "displayName": "App Gateway can only have a named VM or VMSS in its backend pool.",
    "mode": "All",
    "policyRule": {
        "if": {
            "allOf": [
                {
                    "field": "type",
                    "equals": "Microsoft.Network/applicationGateways"
                },
                {
                    "count": {
                        "field": "Microsoft.Network/applicationGateways/backendAddressPools[*].backendAddresses[*]"
                    },
                    "greater": 0
                }
            ]
        },
        "then": {
            "effect": "deny"
        }
    },
    "parameters": {}
}