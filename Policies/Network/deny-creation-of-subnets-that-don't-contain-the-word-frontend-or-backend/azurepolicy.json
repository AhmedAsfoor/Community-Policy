{
    "mode": "All",
    "name": "Deny Creation of Subnets That Don't Contain The Word Frontend or Backend. Can only have the word Frontend or Backend present, not both.",
    "description": "This Policy will deny the creation of subnets that do not contain the word frontend or backend. Case does not matter. Additionaly, a subnet cannot contain both the word backend and frontend, must be one or the other.",
    "policyRule": {
        "if": {
            "anyOf": [
                {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Network/virtualNetworks"
                        },
                        {
                            "anyOf": [
                                {
                                    "not": {
                                        "anyOf": [
                                            {
                                                "field": "Microsoft.Network/virtualNetworks/subnets[*].name",
                                                "contains": "frontend"
                                            },
                                            {
                                                "field": "Microsoft.Network/virtualNetworks/subnets[*].name",
                                                "contains": "backend"
                                            }
                                        ]
                                    }
                                },
                                {
                                    "allOf": [
                                        {
                                            "field": "Microsoft.Network/virtualNetworks/subnets[*].name",
                                            "contains": "frontend"
                                        },
                                        {
                                            "field": "Microsoft.Network/virtualNetworks/subnets[*].name",
                                            "contains": "backend"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Network/virtualNetworks/subnets"
                        },
                        {
                            "anyOf": [
                                {
                                    "not": {
                                        "anyOf": [
                                            {
                                                "field": "name",
                                                "contains": "frontend"
                                            },
                                            {
                                                "field": "name",
                                                "contains": "backend"
                                            }
                                        ]
                                    }
                                },
                                {
                                    "allOf": [
                                        {
                                            "field": "name",
                                            "contains": "frontend"
                                        },
                                        {
                                            "field": "name",
                                            "contains": "backend"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "then": {
            "effect": "[parameters('effect')]"
        }
    },
    "parameters": {
        "effect": {
            "type": "String",
            "metadata": {
                "displayName": "Effect",
                "description": "Enable or disable the execution of the policy"
            },
            "allowedValues": [
                "Deny",
                "Disabled"
            ],
            "defaultValue": "Deny"
        }
    }
}