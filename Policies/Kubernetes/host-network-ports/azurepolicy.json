{
  "properties": {
    "displayName": "Control whether a Pod may use the Host Network, and whitelist Host Ports in a Kubernetes Cluster",
    "policyType": "Custom",
    "mode": "Microsoft.Kubernetes.Data",
    "description": "This policy controls whether pod may use the host network, and whitelists host ports in a Kubernetes cluster. For instructions on using this policy, please visit https://aka.ms/kubepolicydoc.",
    "metadata": {
      "version": "1.0.0-preview",
      "category": "Kubernetes PSP",
      "preview": true
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "enforceOPAConstraint",
          "disabled"
        ],
        "defaultValue": "enforceOPAConstraint"
      },
      "excludedNamespaces": {
        "type": "Array",
        "metadata": {
          "displayName": "Namespace exclusions",
          "description": "List of Kubernetes namespaces to exclude from policy evaluation. Providing a value for this parameter is optional."
        },
        "defaultValue": []
      },
      "allowedHostNetwork": {
        "type": "Boolean",
        "metadata": {
          "displayName": "Host Network Allowed",
          "description": "Whether a pod is allowed to use the host network"
        },
        "defaultValue": false
      },
      "maxPort": {
        "type": "Integer",
        "metadata": {
          "displayName": "Maximum Host Port Value",
          "description": "List of volume types that volumes are allowed to use. Use * to allow all volume types"
        }
      },
      "minPort": {
        "type": "Integer",
        "metadata": {
          "displayName": "Minimum Host Port Value",
          "description": "List of volume types that volumes are allowed to use. Use * to allow all volume types"
        }
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "in": [
          "AKS Engine",
          "Microsoft.Kubernetes/connectedClusters",
          "Microsoft.ContainerService/managedClusters"
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "constraintTemplate": "https://raw.githubusercontent.com/Azure/Community-Policy/master/Policies/Kubernetes/host-network-ports/template.yaml",
          "constraint": "https://raw.githubusercontent.com/Azure/Community-Policy/master/Policies/Kubernetes/host-network-ports/constraint.yaml",
          "values": {
            "excludedNamespaces": "[parameters('excludedNamespaces')]",
            "allowedHostNetwork": "[parameters('allowedHostNetwork')]",
            "minPort": "[parameters('minPort')]",
            "maxPort": "[parameters('maxPort')]"
          }
        }
      }
    }
  }
}
