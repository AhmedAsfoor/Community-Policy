{
  "properties": {
    "displayName": "Forbid Pods in Kubernetes Cluster from using disallowed Sysctl Profiles",
    "policyType": "Custom",
    "mode": "Microsoft.Kubernetes.Data",
    "description": "This policy ensures Pods inside a Kubernetes cluster from using particular Sysctl Profiles. For instructions on using this policy, please visit https://aka.ms/kubepolicydoc",
    "metadata": {
      "version": "1.0.0-preview",
      "category": "Kubernetes PSP",
      "preview": true
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "enforceOPAConstraint",
          "disabled"
        ],
        "defaultValue": "enforceOPAConstraint"
      },
      "excludedNamespaces": {
        "type": "Array",
        "metadata": {
          "displayName": "Namespace exclusions",
          "description": "List of Kubernetes namespaces to exclude from policy evaluation. Providing a value for this parameter is optional."
        },
        "defaultValue": []
      },
      "forbiddenSysctls": {
        "type": "Array",
        "metadata": {
          "displayName": "Forbidden Sysctl Profiles",
          "description": "List of Sysctl Profiles that pods are unable to use. Use * for a wildcard match. E.g. kernal* will disallow any profile starting with kernal. * on its own will disallow all profiles"
        }
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "in": [
          "AKS Engine",
          "Microsoft.Kubernetes/connectedClusters",
          "Microsoft.ContainerService/managedClusters"
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "constraintTemplate": "https://raw.githubusercontent.com/Azure/Community-Policy/master/Policies/Kubernetes/forbidden-sysctl-profiles/template.yaml",
          "constraint": "https://raw.githubusercontent.com/Azure/Community-Policy/master/Policies/Kubernetes/forbidden-sysctl-profiles/constraint.yaml",
          "values": {
            "excludedNamespaces": "[parameters('excludedNamespaces')]",
            "forbiddenSysctls": "[parameters('forbiddenSysctls')]"
          }
        }
      }
    }
  }
}